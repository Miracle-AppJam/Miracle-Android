<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav"
    app:startDestination="@id/launchFragment">

    <fragment
        android:id="@+id/drawFragment"
        android:name="com.appjam.miracle.feature.draw.DrawFragment"
        android:label="DrawFragment" >
        <action
            android:id="@+id/action_drawFragment_to_chatFragment"
            app:destination="@id/chatFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.appjam.miracle.feature.chat.ChatFragment"
        android:label="ChatFragment" />
    <fragment
        android:id="@+id/launchFragment"
        android:name="com.appjam.miracle.feature.launch.LaunchFragment"
        android:label="LaunchFragment" >
        <action
            android:id="@+id/action_launchFragment_to_drawFragment"
            app:destination="@id/drawFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"/>
    </fragment>
</navigation>